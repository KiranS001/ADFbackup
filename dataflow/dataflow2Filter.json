{
	"name": "dataflow2Filter",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Excel6",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DelimitedText10",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "filter1"
				},
				{
					"name": "sort1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     filter1 as string",
				"}",
				"source(output(",
				"          {Emp ID} as string,",
				"          {Emp name} as string,",
				"          {Emp salary} as string,",
				"          {Emp address} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 filter(greaterOrEqual({Emp salary}, $filter1)) ~> filter1",
				"filter1 sort(asc({Emp salary}, true),",
				"     partitionBy('hash', 1)) ~> sort1",
				"sort1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['filterout'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          {Emp ID},",
				"          {Emp name},",
				"          {Emp salary},",
				"          {Emp address}",
				"     ),",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}